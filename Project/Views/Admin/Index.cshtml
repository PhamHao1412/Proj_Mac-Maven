                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-table me-1"></i>
                                    Nhân viên
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Họ và tên</th>
                                                <th>Chức vụ</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var staff in ViewBag.Staff)
                                            {
                                                <tr>
                                                    <td>@(staff.Ho + " " + staff.Ten)</td>
                                                    <td>@staff.TenCV</td>
                                                    <td>
                                                        @Html.ActionLink("Manage", "PhanQuyenNhanVien", new { MaNV = staff.MaNV })
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Del", "Del_NhanVien", new { MaNV = staff.MaNV })
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Tài khoản khách hàng
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Họ và tên</th>
                                        <th>Tên đăng nhập</th>
                                        <th>Mật khẩu</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in ViewBag.User)
                                    {
                                        <tr>
                                            <td>@(user.ho + " " + user.Ten)</td>
                                            <td>@user.tendangnhap</td>
                                            <td>
                                                <div class="password-toggle">
                                                    <input type="password" value="@user.matkhau" disabled />
                                                    <i class="fas fa-eye toggle-icon" onclick="togglePasswordVisibility(this)"></i>
                                                </div>
                                            </td>
                                            <td>@user.email</td>
                                            <td>
                                                @Html.ActionLink("Edit", "EditKhachHang", new { makh = user.makh })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Del", "DeleteKhachHang", new { makh = user.makh })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

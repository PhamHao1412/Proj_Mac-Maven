@model IEnumerable<Project.Models.Store_Category>
@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
@if (Model.Count() == 0)
{
    <h3>Bạn chưa có đơn hàng nào</h3>
    <a href="@Url.Action("Home", "Home")" class="back-to-home-button">Quay về trang chủ</a>

}
else
{
    <h2>Lịch Sử Mua Hàng</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Mã đơn hàng</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Số lượng</th>
                <th scope="col">Giá bán</th>
                <th scope="col">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                int tongtien = 0;
                int prevMaDon = 0;
            }
            @foreach (var item in Model)
            {
                if (prevMaDon != item.Madon)
                {

                    if (prevMaDon != 0)
                    {

                        <tr>
                            <td colspan="5"><strong class="tongtien">Tổng tiền:</strong> </td>
                            <td style="color:red; font-weight:bold;">@String.Format("{0:0,0}", tongtien) VNĐ</td>
                        </tr>
                    }
                    tongtien = 0;
                    prevMaDon = item.Madon;

                    <tr style="border-radius: 15px; border: 1px solid gray; margin-bottom: 10px;">

                        <td>@item.Madon</td>
                        <td>
                            <a style="margin-right:-80px" href="@Url.Action("ProductDetails", "Home", new { id = item.MaSP })">
                                <img src="/@item.Hinh" width="80" />@item.TenSP
                            </a>
                        </td>
                        <td>@item.SoLuong</td>
                        <td>@String.Format("{0:0,0}", item.GiaBan) VNĐ</td>
                        <td>@String.Format("{0:0,0}", item.TongTien)VNĐ</td>
                    </tr>
                }
                else
                {
                    <tr style="border-radius: 15px; border: 1px solid gray; margin-bottom: 10px;">
                        <td></td>
                        <td>
                            <a style="margin-right:-80px" href="@Url.Action("ProductDetails", "Home", new { id = item.MaSP })">
                                <img src="/@item.Hinh" width="80" />@item.TenSP
                            </a>
                        </td>
                        <td>@item.SoLuong</td>
                        <td>@String.Format("{0:0,0}", item.GiaBan) VNĐ</td>
                        <td>@String.Format("{0:0,0}", item.TongTien)VNĐ</td>
                       

                    </tr>
                }
                tongtien += (int)item.TongTien;
            }
            <tr>
                <td colspan="5"><strong class="tongtien">Tổng tiền:</strong> </td>
                <td style="color:red; font-weight:bold;">@String.Format("{0:0,0}", tongtien)VNĐ</td>

            </tr>
        </tbody>
    </table>
      }

@{
    Layout = "~/Views/Shared/_LayoutGH.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Create a new Account</title>

    <!-- Icons font CSS-->
    <link href="~/Content/register/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/Content/register/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/Content/register/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/Content/register/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/Content/register/css/register_main.css" rel="stylesheet" media="all">
</head>

<body>

    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">Create a new Account</h2>
                </div>
                <div class="card-body">
                    <form action="" method="POST">
                        @Html.AntiForgeryToken()

                        <div class="form-row m-b-55">
                            <div class="name">Name</div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="text" id="Ten" name="Ten" required>
                                            <label class="label--desc">First name</label>
                                            <div class="error-message" id="firstNameError"></div> <!-- Phần tử HTML chứa thông báo lỗi cho "First name" -->
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="text" id="ho" name="ho" required>
                                            <label class="label--desc asc">Last name</label>
                                            <div class="error-message" id="lastNameError"></div> <!-- Phần tử HTML chứa thông báo lỗi cho "Last name" -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-row">
                            <div class="name">Username</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" id="tendangnhap" name="tendangnhap" required>
                                </div>
                                <div id="tendangnhap-error" class="text-danger" style="display: none;">Username không hợp lệ. Chỉ cho phép chữ cái và số, tối đa 20 ký tự.</div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Password</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="password" id="matkhau" name="matkhau" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Password Confirm</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="password" data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!" id="matkhauxacnhan" name="matkhauxacnhan" value="" aria-describedby="matkhauxacnhan-error" aria-invalid="true" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Email</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="email" id="email" name="email" required>
                                </div>
                                @if (ViewData["TrungEmail"] != null)
                                {
                                    <div class="text-danger">@ViewData["TrungEmail"]</div>
                                }
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Address</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" id="diachi" name="diachi" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-row m-b-55">
                            <div class="name">Phone</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" id="dienthoai" name="dienthoai" required>
                                </div>
                                @if (ViewData["TrungSDT"] != null)
                                {
                                    <div class="text-danger">@ViewData["TrungSDT"]</div>
                                }
                                <div id="phone-validation-error" class="text-danger"></div> <!-- Thẻ div để hiển thị thông báo lỗi -->
                            </div>
                        </div>

                        <div class="form-row m-b-55">
                            <div class="name">Birth</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="date" id="ngaysinh" name="ngaysinh" required>
                                </div>
                            </div>
                        </div>
                        <div>
                            <button class="btnn btn--radius-2 btn--red" type="submit">Sign Up</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/Content/register/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/Content/register/vendor/select2/select2.min.js"></script>
    <script src="~/Content/register/vendor/datepicker/moment.min.js"></script>
    <script src="~/Content/register/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="~/Content/register/js/global.js"></script>
    <script>
        // Lấy phần tử ngày sinh
        var ngaySinhInput = document.getElementById("ngaysinh");

        // Lấy ngày hiện tại
        var ngayHienTai = new Date();

        // Đặt ngày hết hạn là năm 1900
        var ngayHetHan = new Date("1900-01-01");

        // Lắng nghe sự kiện khi người dùng thay đổi ngày sinh
        ngaySinhInput.addEventListener("change", function () {
            // Lấy giá trị ngày sinh được nhập vào
            var ngaySinh = new Date(this.value);

            // Kiểm tra nếu ngày sinh lớn hơn ngày hiện tại hoặc nhỏ hơn năm 1900
            if (ngaySinh > ngayHienTai || ngaySinh < ngayHetHan) {
                alert("Ngày sinh không hợp lệ!");
                this.value = ""; // Xóa giá trị ngày sinh
            }
        });
    </script>
    <script>
        // Lắng nghe sự kiện khi người dùng rời khỏi trường số điện thoại
        document.getElementById("dienthoai").addEventListener("blur", function () {
            var input = this.value;
            var regex = /^[0-9]{13}$/; // Regex để kiểm tra 10 ký tự số

            if (!regex.test(input)) {
                document.getElementById("phone-validation-error").textContent = "Số điện thoại phải gồm 10 ký tự số và không được chứa ký tự";
                this.value = ""; // Xóa giá trị nhập vào
            } else {
                document.getElementById("phone-validation-error").textContent = ""; // Xóa thông báo lỗi nếu hợp lệ
            }
        });

        // Lắng nghe sự kiện khi người dùng gõ vào trường số điện thoại
        document.getElementById("dienthoai").addEventListener("input", function () {
            var input = this.value;
            var regex = /^[0-9]{0,13}$/; // Regex để chỉ cho phép nhập tối đa 10 ký tự số

            if (!regex.test(input)) {
                this.value = input.slice(0, -1); // Xóa ký tự cuối cùng nếu không hợp lệ
            }
        });
    </script>
    <script>
        document.getElementById("tendangnhap").addEventListener("input", function () {
            var input = this.value;
            var regex = /^[a-zA-Z0-9]{0,20}$/; // Regex để chỉ cho phép nhập chữ cái và số, tối đa 20 ký tự
            var errorElement = document.getElementById("tendangnhap-error");

            if (!regex.test(input)) {
                errorElement.style.display = "block";
                this.value = input.replace(/[^a-zA-Z0-9]/g, ""); // Loại bỏ các ký tự đặc biệt khỏi giá trị nhập vào
                this.value = input.slice(0, -1);
            } else {
                errorElement.style.display = "none";
            }
        });

    </script>
    <script>
        // Lắng nghe sự kiện khi người dùng gõ vào trường "First name"
        document.getElementById("Ten").addEventListener("input", function () {
            var input = this.value;
            var maxLength = 30; // Độ dài tối đa
            var regex = /^[a-zA-Z]{0,30}$/; // Regex để chỉ cho phép nhập chữ cái, tối đa 30 ký tự
            var errorElement = document.getElementById("firstNameError");

            if (input.length > maxLength) {
                this.value = input.slice(0, maxLength); // Xóa bớt ký tự nếu vượt quá độ dài tối đa
            }

            if (!regex.test(this.value)) {
                errorElement.textContent = "Tên không hợp lệ";
                errorElement.classList.add("text-danger"); // Thêm lớp "text-danger" để hiển thị văn bản thông báo lỗi với màu sắc tương ứng
            } else {
                errorElement.textContent = "";
                errorElement.classList.remove("text-danger"); // Xóa lớp "text-danger" nếu không có lỗi
            }
        });

        // Lắng nghe sự kiện khi người dùng gõ vào trường "Last name"
        document.getElementById("ho").addEventListener("input", function () {
            var input = this.value;
            var maxLength = 30; // Độ dài tối đa
            var regex = /^[a-zA-Z]{0,30}$/; // Regex để chỉ cho phép nhập chữ cái, tối đa 30 ký tự
            var errorElement = document.getElementById("lastNameError");

            if (input.length > maxLength) {
                this.value = input.slice(0, maxLength); // Xóa bớt ký tự nếu vượt quá độ dài tối đa
            }

            if (!regex.test(this.value)) {
                errorElement.textContent = "Họ không hợp lệ";
                errorElement.classList.add("text-danger"); // Thêm lớp "text-danger" để hiển thị văn bản thông báo lỗi với màu sắc tương ứng
            } else {
                errorElement.textContent = "";
                errorElement.classList.remove("text-danger"); // Xóa lớp "text-danger" nếu không có lỗi
            }
        });

    </script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<body>
    @*dem thoi gian mo khoa dang nhap*@
    @if (TempData["ThongBaoKhoa"] != null)
    {
        <div class="alert alert-info">
            @TempData["ThongBaoKhoa"]
            <br />
            <span id="countdown"></span>
        </div>
    }
    @{
        var thongBao = Session["ThongBao"] as string;
    }
    <!-- thong bao dang nhap thanh cong -->
    @if (!string.IsNullOrEmpty(thongBao))
    {
        <div id="alertContainer" class="alert alert-info">
            @thongBao
        </div>

        <script>
            setTimeout(function () {
                var alertContainer = document.getElementById('alertContainer');
                if (alertContainer) {
                    alertContainer.style.display = 'none';
                }
            }, 2000);
        </script>
    }

    <div class="hero_area">
        <!-- header section strats -->
        <!-- end header section -->
        <!-- slider section -->
        <section class=" slider_section position-relative">
            <div id="carouselExampleControls" class="carousel slide "
                 data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="img-box">
                            <img src="~/Content/images/hero_iphone14__fjmsqstr1ceq_small_2x.jpg"
                                 alt="">
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="img-box">
                            <img src="~/Content/images/hero_stainless__ycqwtfnl1wyq_small_2x.jpg"
                                 alt="">
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="img-box">
                            <img src="~/Content/images/mac_mini__d3310qb7lt6q_small_2x.jpg"
                                 alt="">
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls"
                   role="button" data-slide="prev">
                    <span class="sr-only"></span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls"
                   role="button" data-slide="next">
                    <span class="sr-only"></span>
                </a>
            </div>
        </section>
        <!-- end slider section -->
    </div>
    <div>
        <div class="dd-container">
            <div class="dd-hello-video">
                <div class="dd-video">
                    <video role="img" playsinline="true" preload="metadata" class="" muted="" poster="" aria-label="Chào mừng tời Apple Store" autoplay="autoplay" height="350" loop style="width: 100%;">
                        <source src="~/Content/video_intro/hello-video-202305.mp4" type="video/mp4">

                        <param name="src" value="#">
                        <param name="scale" value="aspect">
                        <param name="showlogo" value="false">
                        <param name="bgcolor" value="white">
                        <param name="autoplay" value="true">
                        <param name="controller" value="false">
                        <param name="loop" value="false">
                        <param name="postdomevents" value="true">
                        <param name="enablejavascript" value="true">
                        <param name="wmode" value="transparent">
                        <param name="kioskmode" value="true">
                        <param name="saveembedtags" value="true" />
                    </video>

                </div>
            </div>
        </div>
    </div>
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="box">
                <div class="detail-box">
                    <h2>
                        Apple Store
                    </h2>
                    <p>
                    </p>
                </div>
                <div class="img-box">
                    <img src="~/Content/images/macminim1mgnr3saathumb600x600-16524332710.jpg"
                         alt="">
                </div>
                <div class="btn-box">
                    <a href="@Url.Action("Store","Home")">
                        Shop Now
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="about_section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 px-0">
                    <div class="img-box">

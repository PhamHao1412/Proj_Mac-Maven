@model IEnumerable<Project.Models.Store_Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<body style="background-color: #3e3e3f">
    <section class="store_section layout_padding">
        <div class="container-fluid">
            <div>
                <a href="#" class="logo-cate">
                    <h2 class="title-text">@ViewBag.Title</h2>
                </a>
            </div>
            <div class="store_container">
                @{
                    if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <a href="/Home/Product_Details/@item.MaSP">
                                <div class="box">
                                    <img src="/@item.Hinh" class="image-item" />
                                    <h5 class="name-product">
                                        @item.TenSP
                                    </h5>
                                    <div class="box-price">
                                        <strong class="price">@String.Format("{0:0,0}", item.GiaBan)&#8363</strong>
                                        <p class="price-old black"> @String.Format("{0:0,0}", item.GiamGia)&#8363</p>
                                    </div>
                                    <div class="link_box">
                                        <span class="btn-buy">Mua ngay</span>
                                    </div>
                                </div>
                            </a>
                        }
                    }
                }
            </div>
        </div>

<style>
    .btn-buy {
        display: flex;
        height: 40px;
        width: 100px;
        border-radius: 10px;
        font-weight: 600;
        background-color: #7d7d84;
        align-items: center;
        justify-content: center;
    }

    .store_container a {
        text-decoration: none;
    }

    .name-product {
        height: 40px;
        display: -webkit-box;
        padding: 0 10px;
        margin: 12px 0;
        text-align: center;
        font-size: 17px;
        line-height: 20px;
        color: #fff;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
        overflow: hidden;
        -webkit-line-clamp: 2;
    }

    .box-price {
        display: flex;
        color: #fff;
        flex-flow: row;
        align-items: center;
        justify-content: center;
    }

    .price {
        color: #fff;
        text-align: center;
        display: block;
        font-size: 18px;
    }

    .price-old {
        text-decoration: line-through;
        margin: 2px 0 0 10px;
        font-size: 15px;
    }

    .box {
        text-align: center;
        width: 250px;
        height: 400px;
    }
    .logo-cate {
        text-align: center;
    }

        .logo-cate:hover {
            text-decoration: none;
        }

    .title-text {
        margin: 40px 0 40px 0;
        color: white;
    }

    .image-item {
        width: 300px;
        height: 200px;
    }

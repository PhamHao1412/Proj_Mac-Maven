@model IEnumerable<Project.Models.Store_Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-color: #3e3e3f">
    <section class="store_section layout_padding">

        <div class="container-fluid">
            <a href="#" class="logo-cate">
                <h2 class="title-text">@ViewBag.Title</h2>
            </a>
            <div class="store_container">
                @foreach (var item in Model)
                {
                    <a href="/Home/Product_Details/@item.MaSP">
                        <div class="box">
                            <img src="/@item.Hinh" class="image-item" />
                            <div class="link_box">
                                <h5>
                                    @item.TenSP
                                </h5>
                                <span>Buy Now</span>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>

    </section>
</body>
<style>
    .logo-cate {
        text-align: center;
    }

        .logo-cate:hover {
            text-decoration: none;
        }

    .title-text {
        margin: 40px 0 40px 0;
        color: white;
    }

    .image-item {
        width: 300px;
        height: 200px;
    }

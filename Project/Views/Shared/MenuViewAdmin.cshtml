<script>
    // Gắn sự kiện "keyup" cho ô input tìm kiếm
    $(document).ready(function () {
        $('input[name="search"]').keyup(function () {
            var searchTerm = $(this).val();
            if (searchTerm.length > 0) {
                $('.sg-search').addClass('show');
            } else {
                $('.sg-search').removeClass('show');
                return;
            }
            $.ajax({
                url: '/Home/Search',
                type: 'POST',
                data: { searchTerm: searchTerm },
                success: function (data) {
                    var resultsContainer = $('#searchResults');

                    resultsContainer.empty();
                    if (data.length === 0) {
                        $('.sg-search').removeClass('show');
                        return;
                    }
                    for (var i = 0; i < data.length; i++) {
                        var item = data[i];
                        resultsContainer.append('<li><a href="/Home/Product_Details/' + item.id + '"><div class="img-search"><img src="/' + item.hinh + '" alt="' + item.name + '"></div> <div class="text-img"><span>' + item.name + '</span><p><b>' + formatCurrency(item.giaban) + '</b><strike> ' + formatCurrency(item.giamgia) + ' </strike> </p> </div></a></li>');
                        function formatCurrency(value) {
                            return value.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
                        }
                    }
                }
            });
        });
    });
</script>
